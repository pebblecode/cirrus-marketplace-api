{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "service_id": {
      "type": "integer",
      "minimum": 1
    },
    "po_number": {
      "type": "string",
      "minLength": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "amount_in_pennies": {
      "type": "integer",
      "minimum": 0,
      "exclusiveMinimu": true
    }
  },
  "required": ["service_id", "po_number", "email", "amount_in_pennies"]
}
